                android:layout_below="@+id/txt_Msg_Body2" />

            <TextView
                android:id="@+id/txt_Msg_Sender2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YCASummit2018"
                android:textColor="@android:color/black"
