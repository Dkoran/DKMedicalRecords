                android:text="10012018160502338"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/txt_Id2"
                android:layout_toEndOf="@+id/txt_Id2"
                android:layout_marginRight="20dp"
